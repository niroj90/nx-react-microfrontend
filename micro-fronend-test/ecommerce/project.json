{
  "name": "ecommerce",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "ecommerce/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/ecommerce",
        "index": "ecommerce/src/index.html",
        "baseHref": "/",
        "main": "ecommerce/src/main.ts",
        "tsConfig": "ecommerce/tsconfig.app.json",
        "assets": ["ecommerce/src/favicon.ico", "ecommerce/src/assets"],
        "styles": ["ecommerce/src/styles.scss"],
        "scripts": [],
        "isolatedConfig": true,
        "webpackConfig": "ecommerce/webpack.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "ecommerce/src/environments/environment.ts",
              "with": "ecommerce/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "webpackConfig": "ecommerce/webpack.config.prod.js"
        }
      }
    },
    "serve": {
      "executor": "@nx/react:module-federation-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "ecommerce:build",
        "hmr": true,
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "ecommerce:build:development"
        },
        "production": {
          "buildTarget": "ecommerce:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["ecommerce/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "ecommerce:build",
        "watch": false,
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "ecommerce:build:development"
        },
        "production": {
          "buildTarget": "ecommerce:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "ecommerce/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
